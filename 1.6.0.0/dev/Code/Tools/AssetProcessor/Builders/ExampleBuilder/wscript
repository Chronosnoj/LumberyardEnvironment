import os

def build(bld):

    bld.BuilderPlugin(
        target      = 'ExampleBuilder',
        vs_filter   = 'Tools/AssetProcessor/Builders',
        file_list   = ['examplebuilder.waf_files'],
        platforms       = ['win'],
        configurations  = ['debug_all', 'profile_all'],
        disable_pch         = True,
        
        test_all_file_list = ['examplebuilder_tests.waf_files'],
    )


