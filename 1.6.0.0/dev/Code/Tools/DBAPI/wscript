def build(bld):

    bld.CryEngineStaticLibrary(

        #==============================
        # Settings
        #==============================
        target      = 'DBAPI',
        vs_filter   = 'Tools',
        file_list   = 'dbapi.waf_files',
        platforms = ['win'],
        configurations  = ['debug', 'debug_test', 'profile', 'profile_test'],
        pch         = 'stdafx.cpp',
        use         = ['sqlite','AzCore'],

        #==============================
        # Common
        #==============================
        defines     = [ 'PRT_COMPILE',
                        'NOT_USE_CRY_STRING',
                        'OFFLINE_COMPUTATION'],
        includes    = [ '.']

    )



