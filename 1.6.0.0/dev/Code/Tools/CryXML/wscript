def build(bld):

    bld.CryResourceCompilerModule(
        #==============================
        # Settings
        #==============================
        target              = 'CryXML',
        vs_filter           = 'RC',
        file_list           = 'cryxml.waf_files',
        platforms           = ['win'],
        configurations      = ['debug', 'debug_test', 'profile', 'profile_test'],

        includes            = [ '.', 
                                bld.Path('Code/Tools'),
                                bld.Path('Code/Tools/RC/ResourceCompiler'),
                                bld.Path('Code/Tools/CryCommonTools')],

        autod_uselib        = [ 'QT5CORE', 'QT5GUI', 'QT5WIDGETS'],

        export_definitions  = 'CryXML.def',

        #==============================
        # Common
        #==============================
        use                = [ 'expat', 'AzCore' ],
        defines            = [ 'CRYXML_EXPORTS',
                                'CRYTOOLS',
                                '_USE_RTM_VERSION',
                                'RESOURCE_COMPILER' ],
                                
        #==============================
        # Testing
        #==============================
        test_all_file_list = ['cryxml_test.waf_files'],
    )

