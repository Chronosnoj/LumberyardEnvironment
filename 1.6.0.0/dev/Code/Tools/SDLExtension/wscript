import os

def build(bld):

    bld.CryEngineModule(
        target                      = 'SDL2Ext',
        platforms                   = ['android'],
        configurations              = ['all'],
        vs_filter                   = 'SDL2Ext',
        file_list                   = ['sdlext.waf_files'],
        android_cflags              = ['-fvisibility=default'],
        android_armv7_clang_cflags  = ['-Wno-implicit-function-declaration'],
        disable_pch                 = True,
        use                         = 'SDL2',
        export_includes             = [bld.Path('Code/Tools/SDLExtension/src/include')],
    )



